<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabio.barcode.Compilazione">

    <EditText
        android:id="@+id/NArticolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NÂ° Articolo"
        android:inputType="numberDecimal"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="26dp" />
    <EditText
        android:id="@+id/Descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Descrizione prodotto"
        android:inputType="textShortMessage"
        android:layout_marginLeft="162dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/Quantita" />
    <EditText
        android:id="@+id/Quantita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Qta"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="@+id/NArticolo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/NArticolo"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/NArticolo"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="96dp"
        android:layout_height="57dp"
        android:text="Richiesta"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Descrizione" />

</android.support.constraint.ConstraintLayout>
